<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logout</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <!-- Notification Logic -->
  <script>
    <% if (typeof message !== 'undefined') { %>
      Swal.fire({
        icon: '<%= status %>', // 'success' or 'error'
        title: '<%= message %>',
        timer: <%= status === 'success' ? 2000 : 3000 %>, // Faster for success
        showConfirmButton: false
      }).then(() => {
        <% if (typeof redirectTo !== 'undefined') { %>
          window.location.replace('<%= redirectTo %>'); // Redirect to login page
        <% } %>
      });
    <% } %>
  </script>
</body>
</html>
