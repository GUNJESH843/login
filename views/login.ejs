<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/css/styles.css">

  <!-- FontAwesome CDN for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <a href="/" class="navbar-brand">My App</a>
    <div class="buttons">
      <a href="/" class="btn btn-primary">Home</a>
      <a href="/signup" class="btn btn-success">Sign Up</a>
    </div>
  </nav>

  <!-- Theme Toggle Button -->
  <div class="theme-toggle-container">
    <button id="theme-toggle" class="theme-toggle">
      <!-- Sun icon for light mode -->
      <i id="theme-icon-light" class="fas fa-sun" style="display: block; font-size: 30px; color: white;"></i>
      
      <!-- Moon icon for dark mode -->
      <i id="theme-icon-dark" class="fas fa-moon" style="display: none; font-size: 30px; color: white;"></i>
    </button>
  </div>

  <!-- Login Form -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <h3 class="text-center form-title">Login</h3>
          <form id="loginForm" action="/login" method="POST">
            <div class="mb-4">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              <div class="text-danger mt-1 d-none" id="emailError">Please enter your email first.</div>
            </div>
            <div class="mb-4">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
              <div class="text-danger mt-1 d-none" id="passwordError">Please enter your email first.</div>
            </div>
            <div class="text-danger mt-1 d-none" id="userNotFoundError">No user found. Please register.</div>
            <button type="submit" class="btn-login">Login</button>
          </form>
          <div class="mt-3 text-center">
            <a href="/signup">Don't have an account? Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/validation.js"></script>

  <!-- JavaScript for Theme Toggle -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleButton = document.getElementById('theme-toggle');
        const body = document.body;
        const themeIconLight = document.getElementById('theme-icon-light');
        const themeIconDark = document.getElementById('theme-icon-dark');

        // Check if dark mode is set in localStorage
        if (localStorage.getItem('theme') === 'dark') {
            body.classList.add('dark-mode');
            themeIconLight.style.display = 'none';  // Hide sun icon
            themeIconDark.style.display = 'block';  // Show moon icon
        }

        // Event listener for toggling theme
        toggleButton.addEventListener('click', function() {
            body.classList.toggle('dark-mode');
            
            // Toggle icons and save preference in localStorage
            if (body.classList.contains('dark-mode')) {
                themeIconLight.style.display = 'none';  // Hide sun icon
                themeIconDark.style.display = 'block';  // Show moon icon
                localStorage.setItem('theme', 'dark');
            } else {
                themeIconLight.style.display = 'block'; // Show sun icon
                themeIconDark.style.display = 'none';  // Hide moon icon
                localStorage.setItem('theme', 'light');
            }
        });
    });
  </script>
</body>
</html>
